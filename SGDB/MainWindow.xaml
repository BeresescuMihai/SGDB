                    <Label x:Name="label2" Content="Label" HorizontalAlignment="Left" Margin="96,83,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label3" Content="Label" HorizontalAlignment="Left" Margin="96,150,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Register">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-0.4" HorizontalAlignment="Left" Width="538">
                    <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="76,75,0,0" VerticalAlignment="Top" Height="42" Width="156"/>
