                    <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="208,295,0,0" VerticalAlignment="Top" Width="75" Click="Button1_Click"/>
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="191,169,0,0" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
